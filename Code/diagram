                </div>
                <button type="submit" class="btn">Sign In</button>
                <p style="text-align: center; margin-top: 1rem;">Don't have an account? <a href="#" id="switch-to-register" style="color: var(--primary-color); text-decoration: none;">Register here</a></p>
            </form>
        </div>
    </div>
    
    <div id="registerModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Register</h3>
            <form id="registerForm" class="enroll-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="register-name">First Name</label>
                        <input type="text" id="register-firstname" name="firstname" required>
                    </div>
                    <div class="form-group">
                        <label for="register-name">Last Name</label>
                        <input type="text" id="register-lastname" name="lastname" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="register-email">Email</label>
                    <input type="email" id="register-email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="register-password">Password</label>
                    <input type="password" id="register-password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="register-confirm">Confirm Password</label>
                    <input type="password" id="register-confirm" name="confirm" required>
                </div>
                <div class="form-group">
                    <label for="register-role">I am a:</label>
                    <select id="register-role" name="role">
                        <option value="student">Student</option>
                        <option value="mentor">Mentor</option>
                        <option value="teacher">Teacher</option>
                    </select>
                </div>
                <button type="submit" class="btn">Register</button>
                <p style="text-align: center; margin-top: 1rem;">Already have an account? <a href="#" id="switch-to-signin" style="color: var(--primary-color); text-decoration: none;">Sign in here</a></p>
            </form>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // State management
            let currentUser = null;
            let isLoggedIn = false;
            let enrolledCourses = ['Mathematics', 'Science'];
            let completedLessons = ['Introduction to Algebra', 'Variables and Expressions'];
            let currentProgress = 20;
            let currentSection = 'home';
            let currentProfileSection = 'account';
    
            // DOM elements
            const sections = {
                home: document.getElementById('home'),
                dashboard: document.getElementById('dashboard'),
                courses: document.getElementById('courses'),
                lessonContent: document.getElementById('lesson-content'),
                mentorshipChat: document.getElementById('mentorship-chat'),
                profile: document.getElementById('profile')
            };
    
            const navLinks = document.querySelectorAll('.nav-links a');
            const authButtons = {
                signIn: document.getElementById('sign-in-btn'),
                register: document.getElementById('register-btn'),
                logout: document.getElementById('logout-btn')
            };
    
            // Modal elements
            const modals = {
                enroll: document.getElementById('enrollModal'),
                program: document.getElementById('programModal'),
                resource: document.getElementById('resourceModal'),
                signIn: document.getElementById('signInModal'),
                register: document.getElementById('registerModal')
            };
    
            // Close buttons
            const closeButtons = document.querySelectorAll('.close');
    
            // Forms
            const forms = {
                enroll: document.getElementById('enrollForm'),
                signIn: document.getElementById('signInForm'),
                register: document.getElementById('registerForm'),
                profile: document.getElementById('profile-form')
            };
    
            // Other elements
            const courseNameSpan = document.getElementById('course-name');
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const navLinksContainer = document.querySelector('.nav-links');
            const navAuthContainer = document.querySelector('.nav-auth');
            const progressFill = document.getElementById('overall-progress');
            const progressPercent = document.getElementById('progress-percent');
            const userNameElement = document.getElementById('user-name');
            const profileUsername = document.getElementById('profile-username');
            const chatMessages = document.getElementById('chat-messages');
            const chatInput = document.getElementById('chat-input');
            const sendMessageBtn = document.getElementById('send-message-btn');
            const completeLessonBtn = document.getElementById('complete-lesson-btn');
            const moduleItems = document.querySelectorAll('.module-item');
            const profileMenuLinks = document.querySelectorAll('.profile-menu-link');
            const profileSections = {
                account: document.getElementById('account-section'),
                courses: document.getElementById('courses-section'),
                progress: document.getElementById('progress-section'),
                mentors: document.getElementById('mentors-section'),
                certificates: document.getElementById('certificates-section')
            };
            
            // Toast notification
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toast-message');
    
            // Data
            const programData = {
                "YouthBuild": {
                    description: "YouthBuild is an international program providing mentorship and support for young people who are striving to improve their lives through education and skills training.",
                    benefits: [
                        "Hands-on construction training",
                        "High school diploma or GED preparation",
                        "Leadership development",
                        "Career counseling"
                    ],
                    eligibility: "Ages 16-24, low-income, and willing to work hard"
                },
                "Operation HOPE": {
                    description: "Operation HOPE is a nonprofit organization focused on financial literacy, economic improvement, and mentoring to empower underserved communities.",
                    benefits: [
                        "Financial literacy workshops",
                        "Small business coaching",
                        "Credit and money management",
                        "Homeownership education"
                    ],
                    eligibility: "Open to all ages and income levels"
                },
                "SCORE": {
                    description: "SCORE is a nonprofit organization aimed at supporting entrepreneurs and small business owners through mentoring and educational resources.",
                    benefits: [
                        "Free business mentoring",
                        "Low-cost workshops",
                        "Business plan templates",
                        "Market research resources"
                    ],
                    eligibility: "Entrepreneurs and small business owners"
                },
                "Girls Who Code": {
                    description: "Girls Who Code is an international nonprofit organization working to close the gender gap in technology by teaching girls computer science skills.",
                    benefits: [
                        "Free coding clubs and summer programs",
                        "Alumni network",
                        "College and career support",
                        "Technical skill development"
                    ],
                    eligibility: "Girls and young women ages 13-18"
                }
            };
            
            const resourceData = {
                "blog": {
                    title: "Educational Blog",
                    description: "Access our collection of articles on education, teaching strategies, and learning techniques. Our blog covers topics from basic algebra to advanced science concepts, with contributions from educators and industry professionals.",
                    download: "#"
                },
                "practices": {
                    title: "Practice Exercises",
                    description: "Download our collection of short exercises and practice materials for various subjects. These exercises are designed to reinforce learning and help you master key concepts through repetition and application.",
                    download: "#"
                },
                "code": {
                    title: "Code Samples",
                    description: "Get access to our repository of code samples and programming exercises. Perfect for beginners learning to code or advanced programmers looking for reference materials.",
                    download: "#"
                },
                "color": {
                    title: "Design Templates",
                    description: "Download our color theory reference sheets and design templates. These resources are perfect for creative projects and understanding the fundamentals of design.",
                    download: "#"
                },
                "support": {
                    title: "Support Documentation",
                    description: "Access our support documentation and help guides for various programs and platforms. Find answers to common questions and troubleshooting tips.",
                    download: "#"
                },
                "devotions": {
                    title: "Inspirational Devotions",
                    description: "Download our collection of inspirational and motivational devotions to keep you focused and motivated on your learning journey.",
                    download: "#"
                },
                "theory": {
                    title: "Math Theory Guides",
                    description: "Access our comprehensive guide to mathematical theories and concepts. Perfect for students looking to deepen their understanding of fundamental principles.",
                    download: "#"
                }
            };
            
            const courseData = {
                "Mathematics": {
                    title: "Mathematics Basics",
                    description: "Master algebraic concepts including solving equations, working with variables, and constructing functions through interactive lessons and practical exercises.",
                    duration: "8 weeks",
                    level: "Beginner"
                },
                "Science": {
                    title: "Science Introduction",
                    description: "Explore fundamental concepts in biology, chemistry, and physics through interactive experiments and real-world research applications.",
                    duration: "10 weeks",
                    level: "Intermediate"
                },
                "English": {
                    title: "English Language",
                    description: "Develop writing skills with courses focused on crafting clear essays, mastering grammar rules, and analyzing literature from diverse perspectives.",
                    duration: "6 weeks",
                    level: "All Levels"
                }
            };

            // Helper functions
            function showToast(message, type = 'success') {
                toastMessage.textContent = message;
                toast.className = 'toast';
                toast.classList.add(type);
                toast.classList.add('show');
                
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 3000);
            }
            
            function openModal(modal) {
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }
    
            function closeModal(modal) {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
    
            function closeAllModals() {
                Object.values(modals).forEach(modal => closeModal(modal));
            }
    
            function showSection(sectionId) {
                // Hide all sections
                Object.values(sections).forEach(section => {
                    if (section) section.style.display = 'none';
                });
                
                // Show the requested section
                if (sections[sectionId]) {
                    sections[sectionId].style.display = 'block';
                    currentSection = sectionId;
                }
                
                // Update active nav link
                navLinks.forEach(link => {
                    if (link.getAttribute('href') === `#${sectionId}`) {
                        link.classList.add('active');
                    } else {
                        link.classList.remove('active');
                    }
                });
            }
    
            function updateUIForLogin(user) {
                currentUser = user;
                isLoggedIn = true;
                
                // Update auth buttons
                authButtons.signIn.style.display = 'none';
                authButtons.register.style.display = 'none';
                authButtons.logout.style.display = 'block';
                
                // Update user info
                userNameElement.textContent = user.name;
                profileUsername.textContent = user.name;
                
                // Show dashboard by default
                showSection('dashboard');
                
                // Update progress
                updateProgress();
                
                showToast(`Welcome back, ${user.name}!`, 'success');
            }
    
            function updateUIForLogout() {
                currentUser = null;
                isLoggedIn = false;
                
                // Update auth buttons
                authButtons.signIn.style.display = 'block';
                authButtons.register.style.display = 'block';
                authButtons.logout.style.display = 'none';
                
                // Show home
                showSection('home');
                
                showToast('You have been logged out.', 'success');
            }
    
            function updateProgress() {
                // Calculate progress (simplified for demo)
                const totalLessons = 20;
                const completed = 4;
                currentProgress = Math.round((completed / totalLessons) * 100);
                
                // Update progress bar
                progressFill.style.width = currentProgress + '%';
                progressPercent.textContent = currentProgress;
            }
    
            function sendChatMessage(message) {
                if (!message.trim()) return;
                
                // Add user message
                const userMessage = document.createElement('div');
                userMessage.className = 'message user-message';
                const now = new Date();
                const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                userMessage.innerHTML = `<p>${message}</p><small style="display: block; text-align: right; font-size: 0.7rem; opacity: 0.7;">${timeString}</small>`;
                chatMessages.appendChild(userMessage);
                
                // Simulate mentor response after a delay
                setTimeout(() => {
                    const mentorMessage = document.createElement('div');
                    mentorMessage.className = 'message mentor-message';
                    
                    // Simple response logic for demo
                    let response;
                    if (message.toLowerCase().includes('algebra')) {
                        response = "Algebra can be challenging at first. Would you like me to explain a specific concept? We can go through examples together if that would help.";
                    } else if (message.toLowerCase().includes('thank')) {
                        response = "You're welcome! I'm happy to help. Is there anything else you'd like to discuss or any other concepts you're struggling with?";
                    } else if (message.toLowerCase().includes('help') || message.toLowerCase().includes('support')) {
                        response = "I'd be glad to assist you. Could you provide more details about what you're working on or where exactly you're encountering difficulties?";
                    } else {
                        response = "That's an interesting point. To better assist you, could you tell me more about what you're currently working on or which specific aspect you'd like to focus on?";
                    }
                    
                    const now = new Date();
                    const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                    mentorMessage.innerHTML = `<p>${response}</p><small style="display: block; text-align: right; font-size: 0.7rem; opacity: 0.7;">${timeString}</small>`;
                    chatMessages.appendChild(mentorMessage);
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }, 1000 + Math.random() * 2000); // Random delay between 1-3 seconds
                
                // Clear input
                chatInput.value = '';
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
    
            function markLessonComplete() {
                // In a real app, this would update the backend
                const activeLesson = document.querySelector('.module-item.active');
                if (activeLesson && !completedLessons.includes(activeLesson.textContent)) {
                    completedLessons.push(activeLesson.textContent);
                    showToast(`Lesson "${activeLesson.textContent}" marked as complete!`, 'success');
                    updateProgress();
                    
                    // Update progress in the lesson list
                    const nextLesson = activeLesson.nextElementSibling;
                    if (nextLesson) {
                        activeLesson.classList.remove('active');
                        nextLesson.classList.add('active');
                        document.getElementById('lesson-title').textContent = nextLesson.textContent;
                        
                        // Update lesson duration randomly for demo
                        const durationElement = document.querySelector('.lesson-duration');
                        const durations = ['25 min', '35 min', '45 min', '1 hour'];
                        durationElement.textContent = `⏱ ${durations[Math.floor(Math.random() * durations.length)]}`;
                    }
                } else if (activeLesson) {
                    showToast('This lesson is already marked as complete.', 'warning');
                }
            }
            
            function showProfileSection(sectionId) {
                // Hide all profile sections
                Object.values(profileSections).forEach(section => {
                    if (section) section.style.display = 'none';
                });
                
                // Show the requested section
                if (profileSections[sectionId]) {
                    profileSections[sectionId].style.display = 'block';
                    currentProfileSection = sectionId;
                }
            }

            // Event listeners for buttons
            document.querySelectorAll('.enroll-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const course = this.getAttribute('data-course');
                    courseNameSpan.textContent = courseData[course].title;
                    
                    if (isLoggedIn) {
                        if (enrolledCourses.includes(course)) {
                            showToast(`You're already enrolled in ${courseData[course].title}`, 'warning');
                        } else {
                            openModal(modals.enroll);
                        }
                    } else {
                        showToast('Please sign in to enroll in courses', 'warning');
                        openModal(modals.signIn);
                    }
                });
            });
    
            document.querySelectorAll('.learn-more-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const program = this.getAttribute('data-program');
                    const programInfo = programData[program];
                    
                    document.getElementById('program-modal-title').textContent = program;
                    const contentDiv = document.getElementById('program-info-content');
                    
                    let html = `<p style="margin-bottom: 1.5rem;">${programInfo.description}</p>`;
                    html += `<h4 style="margin-bottom: 0.5rem; color: var(--secondary-color);">Benefits:</h4><ul style="margin-bottom: 1.5rem; padding-left: 1.5rem;">`;
                    programInfo.benefits.forEach(benefit => {
                        html += `<li style="margin-bottom: 0.5rem;">${benefit}</li>`;
                    });
                    html += `</ul>`;
                    html += `<p style="margin-top: 1rem;"><strong style="color: var(--secondary-color);">Eligibility:</strong> ${programInfo.eligibility}</p>`;
                    
                    contentDiv.innerHTML = html;
                    openModal(modals.program);
                });
            });
    
            document.querySelectorAll('.resources-list li').forEach(item => {
                item.addEventListener('click', function() {
                    const resource = this.getAttribute('data-resource');
                    const resourceInfo = resourceData[resource];
                    
                    document.getElementById('resource-modal-title').textContent = resourceInfo.title;
                    const contentDiv = document.getElementById('resource-info-content');
                    
                    let html = `<p style="margin-bottom: 1.5rem;">${resourceInfo.description}</p>`;
                    contentDiv.innerHTML = html;
                    
                    document.getElementById('download-btn').setAttribute('href', resourceInfo.download);
                    openModal(modals.resource);
                });
            });
    
            document.getElementById('find-mentor-btn').addEventListener('click', function() {
                if (isLoggedIn) {
                    showSection('mentorshipChat');
                } else {
                    showToast('Please sign in to access the mentorship feature', 'warning');
                    openModal(modals.signIn);
                }
            });
    
            document.getElementById('interest-btn').addEventListener('click', function() {
                const programTitle = document.getElementById('program-modal-title').textContent;
                showToast(`Thank you for your interest in ${programTitle}! We'll contact you with more information.`, 'success');
                closeModal(modals.program);
            });
    
            authButtons.signIn.addEventListener('click', function(e) {
                e.preventDefault();
                openModal(modals.signIn);
            });
    
            authButtons.register.addEventListener('click', function(e) {
                e.preventDefault();
                openModal(modals.register);
            });
    
            authButtons.logout.addEventListener('click', function(e) {
                e.preventDefault();
                updateUIForLogout();
            });
    
            document.getElementById('contact-btn').addEventListener('click', function() {
                showToast("You can reach us at:\nEmail: info@empowerbaquio.org\nPhone: (123) 456-7890", 'success');
            });
    
            document.querySelectorAll('.continue-btn').forEach(button => {
                button.addEventListener('click', function() {
                    if (isLoggedIn) {
                        const course = this.getAttribute('data-course');
                        document.getElementById('lesson-title').textContent = course === 'math' ? 'Introduction to Algebra' : 'Introduction to Science';
                        showSection('lessonContent');
                    } else {
                        showToast('Please sign in to access course content', 'warning');
                        openModal(modals.signIn);
                    }
                });
            });
    
            document.getElementById('chat-with-mentor-btn').addEventListener('click', function() {
                showSection('mentorshipChat');
            });
            
            document.getElementById('back-to-mentors-btn').addEventListener('click', function() {
                showSection('profile');
                showProfileSection('mentors');
            });
            
            document.getElementById('ask-mentor-btn').addEventListener('click', function() {
                showSection('mentorshipChat');
                // Auto-focus on chat input
                setTimeout(() => {
                    chatInput.focus();
                }, 500);
            });

            // Form submissions
            forms.enroll.addEventListener('submit', function(e) {
                e.preventDefault();
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const course = courseNameSpan.textContent;
                
                if (!enrolledCourses.includes(course.split(' ')[0])) {
                    enrolledCourses.push(course.split(' ')[0]);
                }
                
                showToast(`Thank you for enrolling in ${course}! Course materials are now available in your dashboard.`, 'success');
                
                forms.enroll.reset();
                closeModal(modals.enroll);
            });
    
            forms.signIn.addEventListener('submit', function(e) {
                e.preventDefault();
                const email = document.getElementById('signin-email').value;
                const password = document.getElementById('signin-password').value;
                
                // Simple validation for demo
                if (email && password) {
                    updateUIForLogin({
                        name: email.split('@')[0].charAt(0).toUpperCase() + email.split('@')[0].slice(1),
                        email: email
                    });
                    closeModal(modals.signIn);
                } else {
                    showToast('Please enter both email and password', 'error');
                }
            });
    
            forms.register.addEventListener('submit', function(e) {
                e.preventDefault();
                const firstName = document.getElementById('register-firstname').value;
                const lastName = document.getElementById('register-lastname').value;
                const email = document.getElementById('register-email').value;
                const password = document.getElementById('register-password').value;
                const confirm = document.getElementById('register-confirm').value;
                
                // Simple validation for demo
                if (password !== confirm) {
                    showToast("Passwords don't match!", 'error');
                    return;
                }
                
                if (firstName && lastName && email && password) {
                    updateUIForLogin({
                        name: `${firstName} ${lastName}`,
                        email: email
                    });
                    showToast(`Registration successful! Welcome ${firstName}.`, 'success');
                    closeModal(modals.register);
                } else {
                    showToast('Please fill in all fields', 'error');
                }
            });
    
            forms.profile.addEventListener('submit', function(e) {
                e.preventDefault();
                const firstName = document.getElementById('first-name').value;
                const lastName = document.getElementById('last-name').value;
                const email = document.getElementById('profile-email').value;
                
                // Update user info
                currentUser = {
                    name: `${firstName} ${lastName}`,
                    email: email
                };
                
                userNameElement.textContent = currentUser.name;
                profileUsername.textContent = currentUser.name;
                
                showToast('Profile updated successfully!', 'success');
            });
            
            // Switch between sign in and register modals
            document.getElementById('switch-to-register').addEventListener('click', function(e) {
                e.preventDefault();
                closeModal(modals.signIn);
                openModal(modals.register);
            });
            
            document.getElementById('switch-to-signin').addEventListener('click', function(e) {
                e.preventDefault();
                closeModal(modals.register);
                openModal(modals.signIn);
            });

            // Close modals
            closeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const modal = this.closest('.modal');
                    closeModal(modal);
                });
            });
    
            window.addEventListener('click', function(event) {
                if (event.target.classList.contains('modal')) {
                    closeModal(event.target);
                }
            });
    
            // Mobile menu
            mobileMenuBtn.addEventListener('click', function() {
                navLinksContainer.classList.toggle('show-mobile');
                navAuthContainer.classList.toggle('show-mobile');
            });
    
            // Smooth scrolling for navigation
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    const targetId = this.getAttribute('href').substring(1);
                    
                    if (sections[targetId]) {
                        e.preventDefault();
                        showSection(targetId);
                        
                        // Close mobile menu if open
                        navLinksContainer.classList.remove('show-mobile');
                        navAuthContainer.classList.remove('show-mobile');
                        
                        // Scroll to section
                        window.scrollTo({
                            top: sections[targetId].offsetTop - 60,
                            behavior: 'smooth'
                        });
                    }
                });
            });
    
            // Chat functionality
            sendMessageBtn.addEventListener('click', function() {
                sendChatMessage(chatInput.value);
            });
    
            chatInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendChatMessage(chatInput.value);
                }
            });
    
            // Lesson completion
            completeLessonBtn.addEventListener('click', markLessonComplete);
    
            // Module navigation
            moduleItems.forEach(item => {
                item.addEventListener('click', function() {
                    // Remove active class from all items
                    moduleItems.forEach(i => i.classList.remove('active'));
                    
                    // Add active class to clicked item
                    this.classList.add('active');
                    
                    // Update lesson title (simplified for demo)
                    document.getElementById('lesson-title').textContent = this.textContent;
                    
                    // Update lesson duration randomly for demo
                    const durationElement = document.querySelector('.lesson-duration');
                    const durations = ['25 min', '35 min', '45 min', '1 hour'];
                    durationElement.textContent = `⏱ ${durations[Math.floor(Math.random() * durations.length)]}`;
                    
                    // Scroll to top of lesson content
                    document.querySelector('.lesson-content').scrollTo(0, 0);
                });
            });
    
            // Profile menu navigation
            profileMenuLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const section = this.getAttribute('data-section');
                    
                    // Update active menu item
                    profileMenuLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show corresponding section
                    showProfileSection(section);
                });
            });
    
            // Social media links
            document.querySelectorAll('.social-links a').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const platform = this.querySelector('i').className.split('-')[1];
                    showToast(`You would be redirected to our ${platform} page`, 'success');
                });
            });
            
            // Demo user for testing
            const demoUsers = [
                { email: 'student@example.com', password: 'password123', name: 'Student User' },
                { email: 'mentor@example.com', password: 'password123', name: 'Mentor User' }
            ];
            
            // Demo login for testing
            forms.signIn.addEventListener('submit', function(e) {
                e.preventDefault();
                const email = document.getElementById('signin-email').value;
                const password = document.getElementById('signin-password').value;
                
                // Check against demo users
                const user = demoUsers.find(u => u.email === email && u.password === password);
                
                if (user) {
                    updateUIForLogin({
                        name: user.name,
                        email: user.email
                    });
                    closeModal(modals.signIn);
                    showToast(`Welcome back, ${user.name}!`, 'success');
                } else if (email && password) {
                    // Allow any email/password combo in demo
                    updateUIForLogin({
                        name: email.split('@')[0].charAt(0).toUpperCase() + email.split('@')[0].slice(1),
                        email: email
                    });
                    closeModal(modals.signIn);
                } else {
                    showToast('Please enter both email and password', 'error');
                }
            });

            // Initialize
            showSection('home');
            updateUIForLogout();
            
            // Demo: Auto-fill sign in form for testing
            document.getElementById('signin-email').value = 'student@example.com';
            document.getElementById('signin-password').value = 'password123';
        });
    </script>
</body>
</html>
